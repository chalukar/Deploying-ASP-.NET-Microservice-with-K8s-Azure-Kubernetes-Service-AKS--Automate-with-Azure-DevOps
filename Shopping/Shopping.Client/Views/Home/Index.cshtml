@model IEnumerable<Shopping.Client.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-primary fw-bold">
        🛒 Products – AKS Deployment (V2 Updated)
    </h1>
    <p class="text-center text-muted mb-5">
        Latest version deployed successfully on Azure Kubernetes Service (zero downtime)
    </p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="~/images/@item.ImageFile" class="card-img-top img-fluid" alt="@item.Name" style="height: 220px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark fw-semibold">@item.Name</h5>
                        <p class="card-text text-secondary small flex-grow-1">@item.Description</p>
                        <div class="mt-auto">
                            <span class="badge bg-info text-dark me-2">@item.Category</span>
                            <span class="fw-bold text-success">€@item.Price.ToString("0.00")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
